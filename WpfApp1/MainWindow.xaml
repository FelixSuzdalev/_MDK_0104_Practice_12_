        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
Title="Data" Height="500" Width="400" MaxHeight="500" MaxWidth="400" MinHeight="500" MinWidth="400">
